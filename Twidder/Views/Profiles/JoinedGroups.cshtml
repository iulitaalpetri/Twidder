@model Twidder.Models.Profile
@{

    ViewBag.Title = "JoinedGroups";
}

<h2 style="font-family: 'Audiowide', cursive;">Groups</h2>
<br /> 

<a style="        background-color: #36b4e8; font-family: 'Audiowide', cursive;" class="btn btn-info" href="/Profiles/Show/@Model.ProfileId">Back to profile</a>
<br />
<br />


<div class="panel panel-default GroupMembers">
    <div class="panel-heading" style="        border-radius: 20px;background-color: #36b4e8;"> Groups </div> 

    @foreach (var group in ViewBag.joinedGroups){

        <div class="panel-body">
            <strong>@group.GroupName</strong>
            <a class="btn btn-success pull-right" style="font-family: 'Audiowide', cursive; background-color: #36b4e8; color: black;" href="/Groups/Show/@group.GroupId"> Show group</a>
            <br /> <hr />

        </div>
    }

</div>
