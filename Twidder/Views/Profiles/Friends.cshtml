@using Microsoft.AspNetCore.Identity
@{
    ViewBag.Title = "Friends";
}

<h2 style="font-family: 'Audiowide', cursive;"> Friends</h2>


<a style="background-color: #36b4e8; font-family: 'Audiowide', cursive;" class="btn btn-info" href="/Profiles/Show/@ViewBag.profileId">Back to profile</a>

<br />
<br />

<div class="panel panel-default GroupMembers">
    <div class="panel-heading" style="        border-radius: 20px; background-color: #36b4e8;"> Your friends </div>

    @for(int i=0; i<ViewBag.Length; i++){

        var user = ViewBag.friends[i];
        <div class="panel-body">
            <strong>@user.UserName</strong>
            @if (ViewBag.currentUser == ViewBag.UserId)
            {
                <a class="btn btn-danger pull-right" href="/Profiles/DeleteFriend/@ViewBag.profileId/@i"> Delete friend </a>
            }
            <br/><hr/>
           </div>
    }

</div>
