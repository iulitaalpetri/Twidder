@model Twidder.Models.Post


<h2 class="text-center mt-5">Adaugare postare</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Posts",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <br />

                @Html.Label("Content", "Continut Postare")
                <br />
                @Html.TextArea("Content", null, new { @class = "form-control" })

                @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
                <br />

                <br />


                <br />

                <button class="btn btn-success" type="submit">Adauga postare</button>

            }

        </div>
    </div>
</div>
