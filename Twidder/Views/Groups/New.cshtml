@model Twidder.Models.Group

@{
    ViewBag.Title = "Adaugare Grup";
}



<h2>Adaugare Grup</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Groups", method: FormMethod.Post))
    {

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.Label("Nume Grup")
        <br />
        @Html.TextBox("GroupName", null, new { @class = "form-control" })
        <br />
        @Html.Label("GroupDescription", "Descriere Grup")
        <br />
        @Html.TextArea("GroupDescription", null, new { @class = "form-control" })
        <br />
        <br />
        <button type="submit"  style="background-color: whitesmoke; border: 1px solid black; color: black; margin-left: 21%;">Adauga grup</button>

    }
