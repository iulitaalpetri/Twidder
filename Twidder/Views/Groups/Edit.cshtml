@model Twidder.Models.Group


@{
    ViewBag.Title = "Editare grup";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm(controllerName: "Groups", actionName: "Edit", method: FormMethod.Post,
      routeValues: new { id = Model.Id }))
{
    @Html.Label("GroupName", "Denumire grup")
            <br />
    @Html.Editor("GroupName")

    @Html.ValidationMessageFor(m => m.GroupName, null, new { @class = "text-danger" })
            <br />


    @Html.Label("GroupDescription", "Descriere grup")
            <br />
    @Html.Editor("GroupDescription")

    @Html.ValidationMessageFor(m => m.GroupDescription, null, new { @class = "text-danger" })
            <br />

            <button class="btn btn-success" type="submit">Modifica grupul</button>
}




